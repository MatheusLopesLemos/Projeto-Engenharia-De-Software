<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="SeuPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>model.Aluno</class>
        <class>model.Professor</class>
        <!-- Adicione todas as classes aqui -->

        <properties>
            <!-- URL de conexão para Oracle APEX -->
            <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@oracleapexURL:1521:xe"/>
            <property name="javax.persistence.jdbc.user" value="seu_usuario"/>
            <property name="javax.persistence.jdbc.password" value="sua_senha"/>
            <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>

            <!-- Configurações do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>